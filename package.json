{
  "name": "php-best-practices",
  "displayName": "PHP Best Practices",
  "description": "Extensi칩n para sugerir buenas pr치cticas en PHP.",
  "version": "0.0.2",
  "publisher": "OpSETMxico",
  "icon": "images/iconx4.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "pricing": "Free",
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:php"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "PHP Best Practices",
      "properties": {
        "phpBestPractices.standard": {
          "type": "string",
          "default": "PSR12",
          "description": "Est치ndar de codificaci칩n a utilizar por PHP_CodeSniffer."
        },
        "phpBestPractices.executablePath": {
          "type": "string",
          "default": "phpcs",
          "description": "Ruta al ejecutable de PHP_CodeSniffer."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}